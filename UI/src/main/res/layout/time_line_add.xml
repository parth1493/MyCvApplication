<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <View
                    android:id="@+id/first"
                    android:layout_gravity="center"
                    android:background="@color/fontBlack"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"/>

                <com.example.ui.utill.fontface.FontFaceRegular
                    app:layout_anchor="@id/first"
                    app:layout_anchorGravity="top"
                    android:id="@+id/circle_font"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/fontBlack"
                    android:textSize="25sp"
                    android:text="stop-circle" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:fontFamily="@font/bree_serif"
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="20dp"
                        android:text="Robert"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <TextView
                        android:fontFamily="@font/bree_serif"
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="14sp"
                        android:text="Manhattan" />

                    <TextView
                        android:fontFamily="@font/bree_serif"
                        android:id="@+id/txtRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="14sp"
                        android:text="Manhattan" />

                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/txtResponsibilities"
                        android:fontFamily="@font/bree_serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NSW" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>